
<!-- Main container -->
<nav class="level">
  <!-- Left side -->
  <div class="level-left">
    <div class="level-item">
      <p class="subtitle is-5">
        <strong><%= @mailbox.messages.length %></strong> <%= "message".pluralize(@messages.length) %>
      </p>
    </div>
    <div class="level-item">
      <div class="field has-addons">
        <p class="control">
          <input class="input" type="text" placeholder="Find a message">
        </p>
        <p class="control">
          <button class="button">
            Search
          </button>
        </p>
      </div>
    </div>
  </div>

  <!-- Right side -->
  <div class="level-right">
    <p class="level-item"><%= link_to "All", mailbox_messages_path() %></p>
    <p class="level-item"><%= link_to "Past 24 h", mailbox_messages_path(range: 'today') %></p>
  </div>
</nav>

<div class="messages">
  <%= render @messages %>
</div>

<%= paginate @messages %>
