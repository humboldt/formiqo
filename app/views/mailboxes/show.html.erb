

<%= render 'layouts/alerts' %>

<p>
  <strong>Site url:</strong>
  <%= link_to @mailbox.site_url, url_link(@mailbox.site_url), target: '_blank' %>
</p>

<p>
  <strong>Token:</strong>
  <%= @mailbox.token %>
</p>

<p>
  <strong>Name:</strong>
  <%= @mailbox.name %>
</p>

